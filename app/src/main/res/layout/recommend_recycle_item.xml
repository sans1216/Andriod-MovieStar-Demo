<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rc_icon"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/album" />

            <TextView
                android:id="@+id/rc_nickname"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:lineHeight="20dp"
                android:text="Sans"
                android:textColor="#3A4892"
                android:textSize="16sp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/news" />

                <TextView
                    android:id="@+id/rm_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#D9E5EB"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="10dp"
                    android:text="小时候都因为什么样的奇葩理由被打过?"
                    android:textColor="#224F5C"></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rc_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="哈哈哈哈哈" />

        <ImageView
            android:id="@+id/rc_img"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/album2"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rc_like_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--                <ImageView-->
                <!--                    android:id="@+id/rc_like"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    app:srcCompat="@drawable/like" />-->


                <TextView
                    android:id="@+id/rc_date"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="130dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2019年12月27日" />

                <com.ldoublem.thumbUplib.ThumbUpView
                    android:id="@+id/rc_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="70dp"
                    app:cracksColor="#33475f"
                    app:edgeColor="#000000"
                    app:fillColor="#ea8010"
                    app:unlikeType="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>