<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="410dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rank_week"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:background="@drawable/bg2"
        android:gravity="center"
        android:lineSpacingExtra="10dp"
        android:text="一周口碑电影榜"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:clickable="true"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CEAE9F"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank1_item1_1"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="1、婚姻故事"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rank1_item1_s"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8.8"
                android:textColor=" #ff8000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank1_item_2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="2、燃烧女子的肖像"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rank1_item2_s"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8.6"
                android:textColor=" #ff8000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank1_item_3"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="3、野名留史又如何"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rank1_item3_s"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7.9"
                android:textColor=" #ff8000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank1_item_4"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="4、漫长的告别"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rank1_item4_s"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8.0"
                android:textColor=" #ff8000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank1_item_5"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="5、猴子"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rank1_item5_s"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7.7"
                android:textColor=" #ff8000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank1_item_6"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="6、外出偷马"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rank1_item6_s"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7.6"
                android:textColor=" #ff8000"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>